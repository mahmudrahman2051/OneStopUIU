<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.onestopuiu.controller.LoginController"
         stylesheets="@styles-simple.css" styleClass="login-root">
    
    <!-- Background gradient overlay -->
    <top>
        <Region styleClass="login-header" prefHeight="80"/>
    </top>
    
    <center>
        <StackPane alignment="CENTER">
            <!-- Main login card -->
            <VBox alignment="CENTER" spacing="35" styleClass="login-card" maxWidth="450" minWidth="450">
                
                <!-- Logo/Brand Section -->
                <VBox alignment="CENTER" spacing="15">
                    <StackPane>
                        <Rectangle styleClass="logo-background" width="80" height="80" />
