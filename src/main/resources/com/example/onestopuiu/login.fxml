                    </StackPane>
                    <Text styleClass="brand-title" text="OneStopUIU"/>
                    <Text styleClass="brand-subtitle" text="Your University Food Hub"/>
                </VBox>
                
                <!-- Login Form -->
                <VBox spacing="25" alignment="CENTER" styleClass="login-form">
                    
                    <!-- Username Field -->
                    <VBox spacing="8" alignment="CENTER_LEFT" styleClass="field-group">
                        <Label text="Username" styleClass="field-label"/>
                        <StackPane>
                            <TextField fx:id="usernameField" promptText="Enter your username" 
                                      prefWidth="350" styleClass="modern-field"/>
                            <Label text="ðŸ‘¤" styleClass="field-icon"/>
                        </StackPane>
                    </VBox>
                    
                    <!-- Password Field -->
                    <VBox spacing="8" alignment="CENTER_LEFT" styleClass="field-group">
                        <Label text="Password" styleClass="field-label"/>
                        <StackPane>
                            <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                          prefWidth="350" styleClass="modern-field"/>
                            <Label text="ðŸ”’" styleClass="field-icon"/>
                        </StackPane>
                    </VBox>
                    
                    <!-- Message Label -->
                    <Label fx:id="messageLabel" styleClass="message-label" wrapText="true" maxWidth="350"/>
                    
                    <!-- Login Button -->
                    <Button text="Sign In" onAction="#handleLogin" 
                           prefWidth="350" styleClass="login-button"/>
                    
                    <!-- Divider -->
                    <HBox alignment="CENTER" spacing="10" maxWidth="350">
                        <Region styleClass="divider-line" HBox.hgrow="ALWAYS"/>
                        <Label text="or" styleClass="divider-text"/>
                        <Region styleClass="divider-line" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    
                    <!-- Sign Up Section -->
                    <VBox alignment="CENTER" spacing="15">
                        <Label text="Don't have an account?" styleClass="signup-prompt"/>
                        <Button text="Create Account" onAction="#handleSignup" 
                               prefWidth="350" styleClass="signup-button"/>
                    </VBox>
                    
                </VBox>
                
            </VBox>
        </StackPane>
    </center>
    
