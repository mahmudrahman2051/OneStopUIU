<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.onestopuiu.controller.SectionSelectorController"
           stylesheets="@styles-simple.css" styleClass="section-selector-root">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: transparent; -fx-padding: 30;" spacing="20" alignment="CENTER">
            <!-- Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
                <Label fx:id="welcomeLabel" text="Welcome, User!" 
                       style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" 
                       HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout" 
                       style="-fx-background-color: #e2e8f0; -fx-text-fill: #4a5568; -fx-font-size: 14; -fx-padding: 10 20; -fx-background-radius: 8;"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="40" style="-fx-padding: 50;">
                
                <!-- Main Services Grid -->
                <HBox spacing="30" alignment="CENTER">
                    
                    <!-- Food Ordering Card -->
                    <VBox spacing="20" alignment="CENTER" 
                          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-min-width: 320; -fx-max-width: 320; -fx-min-height: 450;">
                        
                        <!-- Card Header -->
                        <VBox spacing="10" alignment="CENTER">
                            <Label text="🍽️" style="-fx-font-size: 48;"/>
                            <Label text="Food Ordering" 
                                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                            <Label text="Order delicious meals from campus canteen" 
                                   style="-fx-font-size: 14; -fx-text-fill: #718096;" 
                                   wrapText="true" maxWidth="280"/>
                        </VBox>
                        
                        <!-- Card Content -->
                        <VBox spacing="15" alignment="CENTER">
                            <HBox spacing="15" alignment="CENTER">
                                <VBox spacing="5" alignment="CENTER">
                                    <Label text="Available Items" 
                                           style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
                                    <Label text="25+" 
                                           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                                </VBox>
                                <VBox spacing="5" alignment="CENTER">
                                    <Label text="Avg. Delivery" 
                                           style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
                                    <Label text="15 min" 
                                           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                                </VBox>
                            </HBox>
                        </VBox>
                        
                        <!-- Card Actions -->
                        <VBox spacing="10" alignment="CENTER">
                            <Button fx:id="canteenButton" text="Browse Menu" onAction="#handleCanteenOrdering"
                                   style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"
                                   prefWidth="250"/>
                            <Button fx:id="myOrdersButton" text="My Orders" onAction="#handleMyOrders"
                                   style="-fx-background-color: transparent; -fx-border-color: #667eea; -fx-border-width: 2; -fx-border-radius: 8; -fx-text-fill: #667eea; -fx-font-size: 14; -fx-padding: 8 20;"
                                   prefWidth="250"/>
                        </VBox>
                        
                    </VBox>
                    
                    <!-- Seller Application Card -->
                    <VBox spacing="20" alignment="CENTER" 
                          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-min-width: 320; -fx-max-width: 320; -fx-min-height: 450;">
                        
                        <!-- Card Header -->
                        <VBox spacing="10" alignment="CENTER">
                            <Label text="🏪" style="-fx-font-size: 48;"/>
                            <Label text="Become a Seller" 
                                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                            <Label text="Start selling your own food items on campus" 
                                   style="-fx-font-size: 14; -fx-text-fill: #718096;" 
                                   wrapText="true" maxWidth="280"/>
                        </VBox>
                        
                        <!-- Card Content -->
                        <VBox spacing="15" alignment="CENTER">
                            <Label fx:id="becomeSellerLabel" text="Ready to start your food business?" 
                                   style="-fx-font-size: 14; -fx-text-fill: #4a5568;" 
                                   wrapText="true" maxWidth="280" alignment="CENTER"/>
                        </VBox>
                        
                        <!-- Card Actions -->
                        <VBox spacing="10" alignment="CENTER">
                            <Button fx:id="becomeSellerButton" text="Apply Now" onAction="#handleBecomeSellerRequest"
                                   style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"
                                   prefWidth="250"/>
                        </VBox>
                        
                    </VBox>
                    
                </HBox>
                
            </VBox>
        </StackPane>
    </center>
    
</BorderPane>